<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/global_relative_layout_style"
    android:layout_width="fill_parent">
<LinearLayout
    style="@style/global_horizontal_layout_style"
    android:weightSum="1"
    android:id="@+id/linear_layout_group_header"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@color/blue_light">
    <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
        style="@style/customLightFont.customMediumText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:singleLine="true"
        android:text="Titolo default"
        android:id="@+id/title_group"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:gravity="center_vertical|right" />

    <com.shamanland.fonticon.FontIconView
        android:id="@+id/button_add"
        style="@style/customIconFontWhite"
        android:text="@string/icon_add"
        android:gravity="center_vertical|right"
        android:textColor="@color/white"
        android:layout_weight="0.8"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textSize="40dp"
        android:paddingRight="20dp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_header"
        android:weightSum="4"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/global_horizontal_layout_style"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear_layout_group_header">

        <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
            style="@style/customRegularFont.customSmallText"
            android:singleLine="true"
            android:text="Start time"
            android:textColor="@color/gray9"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/start_time_header"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
            style="@style/customRegularFont.customSmallText"
            android:singleLine="true"
            android:text="End time"
            android:textColor="@color/gray9"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/end_time_header"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
            style="@style/customRegularFont.customSmallText"
            android:singleLine="true"
            android:textColor="@color/gray9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/temperature_header"
            android:text="Temperature"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
            style="@style/customRegularFont.customSmallText"
            android:singleLine="true"
            android:textColor="@color/gray9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/elimina_header"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

    </LinearLayout>

</RelativeLayout>