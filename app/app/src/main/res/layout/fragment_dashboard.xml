<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/layout_filler"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!--HEATING SYSTEM-->

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/background">

                <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
                    android:id="@+id/label_ilmiocredito"
                    style="@style/customLightFont.customIntermediateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Heaing system"
                    android:textColor="@color/gray3" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout4"
                android:layout_margin="15dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/relative_layout_esypoint"
                    android:layout_alignStart="@+id/relative_layout_esypoint"
                    android:background="@color/line_light" />

                <RelativeLayout
                    android:id="@+id/relative_layout_esypoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true">

                    <View
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_alignEnd="@+id/label_esypoint"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/label_esypoint"
                        android:background="@color/line_dark" />

                    <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
                        android:id="@+id/label_esypoint"
                        style="@style/customLightFont.customSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Switch on/off"
                        android:textColor="@color/line_dark" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_layout_extrabonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/view"
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/check_box_heating_system_on_off"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/check_box_heating_system_on_off"
                        android:background="@color/line_dark" />

                    <CheckBox
                        android:id="@+id/check_box_heating_system_on_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
            </RelativeLayout>

            <!--SUMMER WINTER-->

            <RelativeLayout
                android:id="@+id/relativeLayout10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:layout_below="@+id/relativeLayout5">

                <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
                    android:id="@+id/label_seasons"
                    style="@style/customLightFont.customIntermediateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Heaing system"
                    android:textColor="@color/gray3" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout10"
                android:layout_margin="15dp"
                android:layout_weight="2">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/relative_layout_winter"
                    android:layout_alignStart="@+id/relative_layout_winter"
                    android:background="@color/line_light" />

                <RelativeLayout
                    android:id="@+id/relative_layout_winter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true">

                    <View
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_alignEnd="@+id/label_winter"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/label_winter"
                        android:background="@color/line_dark" />relative_layout_checkbox2

                    <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
                        android:id="@+id/label_winter"
                        style="@style/customLightFont.customSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Switch on/off"
                        android:textColor="@color/line_dark" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_layout_checkbox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/view2"
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/check_box_season_winter"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/check_box_season_winter"
                        android:background="@color/line_dark" />

                    <CheckBox
                        android:id="@+id/check_box_season_winter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
            </RelativeLayout>

            <!--DISPLAY-->

            <RelativeLayout
                android:id="@+id/relativeLayout20"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:layout_below="@+id/relativeLayout11">

                <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
                    android:id="@+id/title_display"
                    style="@style/customLightFont.customIntermediateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Heaing system"
                    android:textColor="@color/gray3" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_below="@+id/relativeLayout20"
                android:layout_margin="15dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/relative_layout_display"
                    android:layout_alignStart="@+id/relative_layout_display"
                    android:background="@color/line_light" />

                <RelativeLayout
                    android:id="@+id/relative_layout_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true">

                    <View
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_alignEnd="@+id/label_display"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/label_display"
                        android:background="@color/line_dark" />relative_layout_checkbox2

                    <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
                        android:id="@+id/label_display"
                        style="@style/customLightFont.customSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Switch on/off"
                        android:textColor="@color/line_dark" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_layout_checkbox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/view3"
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/check_box_display"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/check_box_display"
                        android:background="@color/line_dark" />

                    <CheckBox
                        android:id="@+id/check_box_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
            </RelativeLayout>

            <!--SET DATE-->

            <RelativeLayout
                android:id="@+id/relativeLayout30"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:layout_below="@+id/relativeLayout21">

                <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
                    android:id="@+id/title_setdate"
                    style="@style/customLightFont.customIntermediateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Heaing system"
                    android:textColor="@color/gray3" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_below="@+id/relativeLayout30"
                android:layout_margin="15dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/relative_layout_setdate"
                    android:layout_alignStart="@+id/relative_layout_setdate"
                    android:background="@color/line_light" />

                <RelativeLayout
                    android:id="@+id/relative_layout_setdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true">

                    <View
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_alignEnd="@+id/label_setdate"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/label_setdate"
                        android:background="@color/line_dark" />relative_layout_checkbox2

                    <app.giacomo.lavermicocca.termostato.Utils.TextViewFont
                        android:id="@+id/label_setdate"
                        style="@style/customLightFont.customSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Switch on/off"
                        android:textColor="@color/line_dark" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_layout_checkbox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/view4"
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/check_box_setdate"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/check_box_setdate"
                        android:background="@color/line_dark" />

                    <CheckBox
                        android:id="@+id/check_box_setdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>







    </ScrollView>

</FrameLayout>