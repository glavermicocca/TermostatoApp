    <!--MARGIN LOGIN FORM-->
    <style name="relative_layout_form_login">
        <item name="android:padding">10dp</item>
    </style>

    <style name="edit_text_login_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/edit_text_color_hint</item>
        <item name="android:background">@drawable/edit_text_login_email</item>
    </style>

    <style name="edit_text_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/edit_text_color</item>
