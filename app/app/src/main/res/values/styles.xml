    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:background">@drawable/round</item>
    </style>

    <style name="edit_text_multiline_style">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:background">@color/table_zebra</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingLeft">7dp</item>
    </style>

    <style name="wrapper_layout_padding">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/white_background</item>
    </style>

    <!--SCROLL LAYOUT-->
    <style name="global_scroll_layout_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/white_background</item>
    </style>

    <!--VERTICAL LAYOUT-->
    <style name="global_vertical_layout_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/white_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--HORIZONTAL LAYOUT-->
    <style name="global_horizontal_layout_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_background</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--RELATIVE LAYOUT-->
    <style name="global_relative_layout_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--ADAPTERS-->
    <style name="global_adapter_relative_layout_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/list_wrap_padding</item>
    </style>

    <style name="global_adapter_vertical_layout_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/list_wrap_padding</item>
    </style>

    <style name="global_adapter_horizontal_layout_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/list_wrap_padding</item>
    </style>

    <!-- PARTNERS -->
    <style name="partners_adapter_relative_layout_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--LABEL degli EditText eredito da -> customLightFont.customNormalText -->
    <style name="customLightFont.customNormalText.label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:singleLine">true</item>
