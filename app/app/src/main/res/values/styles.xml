<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
        <item name="drawerArrowStyle">@style/Theme.Test.DrawerArrowStyle</item>
    </style>

    <style name="Theme.Test.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/blue_light_medium</item>
        <item name="android:padding">16dp</item>

        <item name="thickness">4dp</item>
        <item name="barSize">26dp</item>
        <item name="gapBetweenBars">3dp</item>
        <item name="middleBarArrowSize">16dp</item>
        <item name="drawableSize">26dp</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/blue_light</item>
        <item name="android:colorPrimaryDark">@color/blue_light_medium</item>
        <item name="android:colorAccent">@color/table_icon</item>
    </style>

    <style name="customIconFont">
        <item name="overridePressed">true</item>
        <item name="pressedGlowColor">#F00</item>
        <item name="pressedGlowRadius">1dp</item>
        <item name="android:textColor">@color/table_icon</item>
    </style>

    <style name="customIconFontWhite">
        <item name="overridePressed">true</item>
        <item name="pressedGlowColor">@color/blue_dark</item>
        <item name="pressedGlowRadius">1dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyCustomToolBarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--ROBOTO FONTS-->
